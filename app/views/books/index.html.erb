<!-- 一覧 -->
<h1>Books</h1>

 <table>
    <thead>
     <tr>
         <th>Title</th>
         <th>Body</th>
         <th colspan="3"></th>
     </tr>
     </thead>
     <tbody>
      <% @books.each do |book| %>
      <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td><%= link_to "Show", book_path(book) %></td>
         <td><%= link_to "Edit", edit_book_path(book) %></td>
         <td><%= link_to 'Destroy', book, method: :delete, data: {confirm: "Are you sure？"} %></td>
     </tr>
      <% end %>
     </tbody>
 </table>

<!-- 投稿フォーム -->
<h2>New book</h2>
<% if @book.errors.any? %>
 <ul>
  <li><%= @book.errors.count%>error prohibited this book from being saved:</li>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
 </ul>
<% end %>

<%= form_with model: @book do |f| %>

 <label>Title</label>
 <%= f.text_field :title %>

 <label>Body</label>
 <%= f.text_area :body %>

 <p><%= f.submit 'Create Book' %></p>
 <% end %>